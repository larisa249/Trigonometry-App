<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"

    android:background="@drawable/fundal">


    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="157dp"
        android:layout_marginStart="75dp"
        android:padding="20dp"
        android:text="Introdu expresia trigonometrică: "
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#060270"
        android:textSize="25sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edit_text_expression"
        android:layout_width="320dp"
        android:layout_height="100dp"
        android:layout_marginStart="35dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="256dp"
        android:layout_marginEnd="37dp"
        android:background="#632196F3"
        android:inputType="text"
        android:textSize="25dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_calculate"
        android:layout_width="130dp"
        android:layout_height="47dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="110dp"
        android:layout_marginBottom="345dp"
        android:text="Calculează"
        android:textColor="@android:color/white"
        android:textSize="16dp"
        android:textStyle="bold"
        android:background="@drawable/button_background"/>

    <TextView
        android:id="@+id/text_view_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="270dp"
        android:padding="20dp"
        android:text="0"
        android:gravity="center"
        android:textColor="#060270"
        android:textSize="25sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/help"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/circle"
        android:textColor="@android:color/white"
        android:textSize="16dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_history"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="90dp"
        android:background="@drawable/l"
        android:textColor="@android:color/white"
        android:textSize="16dp"
        android:textStyle="bold" />

</RelativeLayout>
