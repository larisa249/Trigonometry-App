<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Grafic"
    android:background="@drawable/fundal">

    <EditText
        android:id="@+id/editTextFunction"
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="31dp"
        android:hint="Expresia trigonometrică"
        android:inputType="text" />

    <Button
        android:id="@+id/buttonPlot"
        android:layout_width="150dp"
        android:layout_height="47dp"
        android:layout_below="@id/editTextFunction"
        android:layout_alignParentStart="true"
        android:layout_marginStart="155dp"
        android:layout_marginTop="16dp"
        android:text="Generează graficul"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:background="@drawable/button_background"/>

    <com.jjoe64.graphview.GraphView
        android:id="@+id/graph"
        android:layout_width="350dp"
        android:layout_height="500dp"
        android:layout_below="@id/buttonPlot"
        android:layout_alignParentStart="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="70dp"
        android:foregroundGravity="center" />
</RelativeLayout>
