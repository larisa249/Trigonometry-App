<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/fundal">

    <TextView
        android:id="@+id/question_text"
        android:layout_width="316dp"
        android:layout_height="66dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:text="Aici va fi întrebarea?"
        android:textSize="25sp"
        android:textStyle="bold"/>

    <RadioGroup
        android:id="@+id/answer_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/question_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">

        <RadioButton
            android:id="@+id/option_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opțiunea A"
            android:textStyle="bold"
            android:textSize="20sp"/>

        <RadioButton
            android:id="@+id/option_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opțiunea B"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/option_c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opțiunea C"
            android:textStyle="bold"
            android:textSize="20sp"/>
    </RadioGroup>

    <Button
        android:id="@+id/submit_button"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:text="Verifică"
        android:layout_below="@id/answer_group"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_background"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/score_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="54dp"
        android:layout_marginTop="631dp"
        android:text="Scor: 0"
        android:textSize="25sp"
        android:textStyle="bold" />

</RelativeLayout>
